include sshd

class server {
    user { 'captain':
        ensure => present,
        groups => ['admin'],
        home => '/home/captain',
        password => 'hoonfore',
        managehome => true,
    }

    ssh_authorized_key { 'konker',
        key => 'ssh-rsa  konker@morningwoodsoftware.com',
        user => User['captain'],
    }

    # create a rsa key pair, and the .ssh directory
    exec { 'ssh-keygen':
        command => '/usr/bin/ssh-keygen -q -f ~captain/.ssh/id_rsa -t rsa',
        creates => '~captain/.ssh/id_rsa',
        require => User['captain'],
    }
}

